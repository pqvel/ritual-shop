{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "allowJs": true,
    "noUnusedParameters": false,

    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/app/actions/categories.js",
    "src/app/actions/products.ts",
    "src/app/admin/_components/forms/ProductForm.jsx",
    "src/app/actions/portfolio.js",
    "src/app/actions/email.js",
    "src/auth.js"
  ],
  "exclude": ["node_modules"]
}
